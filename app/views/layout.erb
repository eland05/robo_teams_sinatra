<!doctype html>
<html>
  <head>
    <title>RoboTeams</title>
    <style>
    h1 {
        color: blue;
        font-family: verdana;
        font-size: 250%;
    }
    h2  {
        font-family: courier;
        font-size: 190%;
    }
    h3  {
        font-family: courier;
        font-size: 150%;
    }
    h4  {
        color: red;
        font-family: courier;
        font-size: 120%;
    }
    body  {
      font-family: courier;
    }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Welcome to RoboTeams</h1>
      <% if logged_in? %>
      <h3>You are logged in as: <%=current_user.username %></h3>
      <%end %>
      
      <% flash.keys.each do |type| %>
        <div data-alert class="flash <%= type %> alert-box radius">
            <%= flash[type] %>
            <a href="#" class="close">&times;</a>
          </div>
      <% end %>

      <%= yield %>


    </div>
    <nav>
      <% if logged_in? %>

        <a href="/teams/new"> New Team</a><br>
        <a href="/teams"> All of My Teams</a><br>
        <a href="/members"> All of My Team Members</a><br>
        <a href="/sponsors"> Sponsor List</a><br>
        <h4><a href="/logout"> Log Out</a></h4>


      <% else %>
      <h4><a href="/login">Sign in</a> or <a href="/signup">Sign Up</a> to create your list of teams.</h4>

      <%end %>

    </nav>
  </body>
</html>
